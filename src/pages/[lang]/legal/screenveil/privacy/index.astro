---
import Layout from '../../../../../layouts/Layout.astro';
import { Navbar, Footer } from "@/components/common";
import { Section } from "@/components/common/Section";
import { Smartphone, Shield } from "lucide-react";
import { getDictionary } from "@/i18n/get-dictionary";
import { i18nConfig } from "@/i18n/config";

export async function getStaticPaths() {
  return i18nConfig.locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const dict = await getDictionary(lang as any);

const lastUpdated = "August 2025";
const meta = dict.metadata?.legalScreenveilPrivacy || {};
---

<Layout 
  title={meta.title || "Privacy Policy - ScreenVeil"}
  description={meta.description || "ScreenVeil Privacy Policy - Learn how we protect your privacy with our no-data-collection approach."}
  keywords={meta.keywords}
  ogTitle={meta.ogTitle}
  ogDescription={meta.ogDescription}
  ogImage={meta.ogImage}
  ogUrl={meta.ogUrl}
  lang={lang}
>
  <div class="flex min-h-screen flex-col bg-white font-sans selection:bg-blue-100 selection:text-blue-900">
    <Navbar client:load translations={dict.nav}>
      <div slot="customBranding" class="flex items-center gap-2">
        <Smartphone className="h-5 w-5 text-blue-600 fill-blue-600" />
        <span class="text-lg font-black tracking-tighter text-slate-900 uppercase">
          Screen<span class="text-blue-600">Veil</span>
        </span>
      </div>
    </Navbar>

    <main class="grow">
      <Section className="pb-32 pt-40 lg:pt-56" client:load>
        <div class="section-container">
          <div class="mx-auto max-w-4xl">
            {/* Header */}
            <header class="mb-20 text-center">
              <span class="mb-4 block text-[10px] font-black uppercase tracking-[0.3em] text-blue-600">
                Legal Documentation
              </span>
              <h1 class="text-display mb-6 text-slate-900">
                Privacy Policy<span class="text-slate-300">.</span>
              </h1>
              <div class="flex flex-col sm:flex-row gap-4 justify-center text-sm font-bold text-slate-400">
                <span>Effective Date: {lastUpdated}</span>
                <span class="hidden sm:inline">‚Ä¢</span>
                <span>Last Updated: {lastUpdated}</span>
              </div>
            </header>

            {/* Content */}
            <div class="space-y-24 text-lg font-medium leading-relaxed text-slate-600">
              <section>
                <h2 class="text-3xl font-black text-slate-900 mb-8">Introduction</h2>
                <div class="space-y-6">
                  <p>
                    ScreenVeil is committed to protecting your privacy. This Privacy
                    Policy explains how we collect, use, and safeguard your
                    information when you use the ScreenVeil mobile application.
                  </p>
                  <p>
                    ScreenVeil is a privacy-focused screen overlay application
                    designed to help users protect their screen content from prying
                    eyes by providing customizable screen overlays and privacy
                    controls.
                  </p>
                </div>
              </section>

              <section>
                <h2 class="text-3xl font-black text-slate-900 mb-8">What We DON'T Collect</h2>
                <div class="bg-green-50/50 border border-green-100 rounded-[2.5rem] p-12">
                  <p class="text-green-900 font-bold mb-8 text-xl">
                    ScreenVeil is designed with privacy as a core principle. We do not
                    collect, store, or transmit any personal information, including:
                  </p>
                  <ul class="grid sm:grid-cols-2 gap-4 text-green-700 list-none text-base">
                    <li class="flex gap-3"><span class="text-green-600 font-black shrink-0">¬∑</span><span>Personal identification info</span></li>
                    <li class="flex gap-3"><span class="text-green-600 font-black shrink-0">¬∑</span><span>Screen content or screenshots</span></li>
                    <li class="flex gap-3"><span class="text-green-600 font-black shrink-0">¬∑</span><span>Usage analytics or tracking</span></li>
                    <li class="flex gap-3"><span class="text-green-600 font-black shrink-0">¬∑</span><span>Device identifiers or Ad IDs</span></li>
                    <li class="flex gap-3"><span class="text-green-600 font-black shrink-0">¬∑</span><span>Location data</span></li>
                    <li class="flex gap-3"><span class="text-green-600 font-black shrink-0">¬∑</span><span>Contact lists or local files</span></li>
                  </ul>
                </div>
              </section>

              <section>
                <h2 class="text-3xl font-black text-slate-900 mb-8">How the App Works</h2>
                <p class="mb-10">
                  The only information the App may access is processed locally for functional logic:
                </p>
                <div class="grid md:grid-cols-2 gap-8">
                  <div class="bg-blue-50/50 border border-blue-100 rounded-3xl p-8">
                    <h4 class="text-xs font-black uppercase tracking-widest text-blue-600 mb-4">System Display</h4>
                    <p class="text-sm font-bold text-slate-700">
                      To provide overlay functionality, the App requires access to
                      your device's display system to create screen overlays.
                    </p>
                  </div>
                  <div class="bg-blue-50/50 border border-blue-100 rounded-3xl p-8">
                    <h4 class="text-xs font-black uppercase tracking-widest text-blue-600 mb-4">App Preferences</h4>
                    <p class="text-sm font-bold text-slate-700">
                      Settings and preferences you configure within the App are
                      stored locally on your device only.
                    </p>
                  </div>
                </div>
              </section>

              <section>
                <h2 class="text-3xl font-black text-slate-900 mb-8">Required Permissions</h2>
                <p class="mb-10">
                  ScreenVeil requires the following hardware-level permissions to function:
                </p>
                <div class="space-y-6">
                  <div class="flex items-center gap-6 p-8 border border-slate-100 rounded-3xl bg-slate-50/30">
                    <div class="text-3xl shrink-0">üñ•Ô∏è</div>
                    <div>
                      <h4 class="font-black text-slate-900 uppercase tracking-tighter">SYSTEM_ALERT_WINDOW</h4>
                      <p class="text-base text-slate-500">Required to display screen overlays over other applications.</p>
                    </div>
                  </div>
                  <div class="flex items-center gap-6 p-8 border border-slate-100 rounded-3xl bg-slate-50/30">
                    <div class="text-3xl shrink-0">üîã</div>
                    <div>
                      <h4 class="font-black text-slate-900 uppercase tracking-tighter">WAKE_LOCK</h4>
                      <p class="text-base text-slate-500">Required to maintain overlay functionality when the device screen is active.</p>
                    </div>
                  </div>
                  <div class="flex items-center gap-6 p-8 border border-slate-100 rounded-3xl bg-slate-50/30">
                    <div class="text-3xl shrink-0">‚öôÔ∏è</div>
                    <div>
                      <h4 class="font-black text-slate-900 uppercase tracking-tighter">FOREGROUND_SERVICE</h4>
                      <p class="text-base text-slate-500">Required to run the overlay service in the background.</p>
                    </div>
                  </div>
                </div>
                <div class="bg-amber-50/50 border border-amber-100 rounded-3xl p-8 mt-8 flex gap-6 items-center">
                   <Shield className="h-6 w-6 text-amber-600 shrink-0" />
                  <p class="text-amber-800 text-sm font-medium">
                    <strong>Important:</strong> These permissions are used solely for
                    the App's core overlay functionality and are not used to
                    collect or transmit any personal information.
                  </p>
                </div>
              </section>

              <section>
                <h2 class="text-3xl font-black text-slate-900 mb-8">Data Security</h2>
                <div class="grid md:grid-cols-2 gap-8">
                  <div class="rounded-3xl border border-slate-100 p-8">
                    <h4 class="text-xl font-black text-slate-900 mb-4">Local Storage</h4>
                    <ul class="space-y-3 text-sm text-slate-500 list-none">
                      <li class="flex gap-2"><span>‚Ä¢</span> All app data is stored locally on your device</li>
                      <li class="flex gap-2"><span>‚Ä¢</span> We use Android's secure storage mechanisms</li>
                      <li class="flex gap-2"><span>‚Ä¢</span> No data is stored on external servers</li>
                    </ul>
                  </div>
                  <div class="rounded-3xl border border-slate-100 p-8">
                    <h4 class="text-xl font-black text-slate-900 mb-4">Security Measures</h4>
                    <ul class="space-y-3 text-sm text-slate-500 list-none">
                      <li class="flex gap-2"><span>‚Ä¢</span> Follows Android security best practices</li>
                      <li class="flex gap-2"><span>‚Ä¢</span> Operates within Android's permission framework</li>
                      <li class="flex gap-2"><span>‚Ä¢</span> No network connections for data collection</li>
                    </ul>
                  </div>
                </div>
              </section>

              <section class="rounded-[2.5rem] border border-blue-100 bg-blue-50/30 p-12 text-center">
                <h2 class="mb-6 text-3xl font-black text-slate-900">Contact Engineering</h2>
                <p class="mb-10 text-slate-600 max-w-2xl mx-auto">
                  If you have any questions, concerns, or suggestions regarding this
                  Privacy Policy or the ScreenVeil App, please contact the logic lab.
                </p>
                <a
                  href="mailto:support@applass.com"
                  class="text-2xl font-black text-blue-600 hover:underline"
                >
                  support@applass.com
                </a>
              </section>

              <section>
                  <h2 class="text-3xl font-black text-slate-900 mb-8 text-center">Compliance</h2>
                  <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 text-center">
                      <div class="p-4 bg-slate-50 rounded-2xl text-xs font-black uppercase tracking-widest text-slate-400">GDPR</div>
                      <div class="p-4 bg-slate-50 rounded-2xl text-xs font-black uppercase tracking-widest text-slate-400">CCPA</div>
                      <div class="p-4 bg-slate-50 rounded-2xl text-xs font-black uppercase tracking-widest text-slate-400">COPPA</div>
                      <div class="p-4 bg-slate-50 rounded-2xl text-xs font-black uppercase tracking-widest text-slate-400">Android Privacy</div>
                  </div>
              </section>

              <div class="pt-12 border-t border-slate-100 text-center">
                <p class="text-sm text-slate-400 italic">
                  This Privacy Policy is effective as of August 2025 and supersedes any
                  previous privacy policies for ScreenVeil.
                </p>
              </div>
            </div>
          </div>
        </div>
      </Section>
    </main>

    <Footer translations={dict.footer} />
  </div>
</Layout>
