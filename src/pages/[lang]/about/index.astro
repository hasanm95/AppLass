---
import Layout from '../../../layouts/Layout.astro';
import { Navbar, Footer } from "@/components/common";
import { Section } from "@/components/common/Section";
import { PILLARS } from "@/constants/home-data";
import {
  Zap,
  Calculator,
  Globe,
  Shield,
  Search,
} from "lucide-react";
import { getDictionary } from "@/i18n/get-dictionary";
import { i18nConfig } from "@/i18n/config";

export async function getStaticPaths() {
  return i18nConfig.locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const dict = await getDictionary(lang as any);

const meta = dict.metadata?.about || {};

const iconMap = {
  Zap: Zap,
  Calculator: Calculator,
  Globe: Globe,
};

const PILLAR_KEYS = ["eliteExpertise", "logicalIntegrity", "radicalAccessibility"] as const;
---

<Layout 
  title={meta.title || "About | The AppLass Methodology"}
  description={meta.description || "Founder-led development derived from first principles. Mathematical integrity meets high-end digital craft. Meet the engineer behind the logic."}
  keywords={meta.keywords}
  ogTitle={meta.ogTitle}
  ogDescription={meta.ogDescription}
  ogImage={meta.ogImage}
  ogUrl={meta.ogUrl}
  lang={lang}
>
  <div class="min-h-screen bg-white">
    <Navbar client:load translations={dict.nav} />
    <div class="pt-32">
      {/* Hero Methodology Section */}
      <Section className="bg-iridescent border-b border-slate-100 py-20 lg:py-32" client:load>
        <div class="section-container text-center lg:text-left">
          <span class="mb-6 block text-[10px] font-black tracking-[0.2em] text-blue-800 uppercase">
            {dict.about?.hero?.eyebrow || "The AppLass Methodology"}
          </span>
          <h1 class="text-display mx-auto mb-8 max-w-4xl text-slate-900 lg:mx-0">
            {dict.about?.hero?.headline || "The"} <span class="text-slate-300">{dict.about?.hero?.headlineAccent || "Methodology."}</span>
          </h1>
          <p class="mx-auto max-w-2xl text-xl leading-relaxed font-medium text-slate-500 lg:mx-0">
            {dict.about?.hero?.description || "At AppLass, we bridge the gap between complex mathematics and human-centric software. From high-conversion Shopify tools to mindful mobile utilities, we build the 'Next Wave' of digital performance—zero bloat, maximum impact."}
          </p>
        </div>
      </Section>

      {/* Founder Bio - E-E-A-T Signal */}
      <Section className="py-32" client:load>
        <div class="section-container">
          <div class="flex flex-col items-center gap-20 lg:flex-row">
            <div class="relative lg:w-1/3">
              <div class="relative aspect-4/5 overflow-hidden rounded-[3rem] bg-slate-100">
                {/* Placeholder for real image in next iteration if needed */}
                <div class="pointer-events-none absolute inset-0 flex items-center justify-center bg-slate-900 text-[8rem] sm:text-[10rem] font-black text-white/10 italic select-none">
                  {dict.about?.bio?.imageText || "LOGIC"}
                </div>
              </div>
              {/* Float Badge */}
              <div class="absolute -right-6 -bottom-6 rounded-3xl bg-blue-600 p-8 text-white shadow-2xl lg:-right-10">
                <span class="block text-3xl font-black">{dict.about?.bio?.yearsExperience || "7+"}</span>
                <span class="text-xs font-bold tracking-widest text-blue-100 uppercase">
                  {dict.about?.bio?.experienceLabel || "Years Experience"}
                </span>
              </div>
            </div>
            <div class="flex-1 space-y-10">
              <span class="block text-[10px] font-black tracking-widest text-slate-400 uppercase">
                {dict.about?.bio?.eyebrow || "The Founder's Logic"}
              </span>
              <h2 class="text-5xl leading-[1.1] font-black text-slate-900">
                {dict.about?.bio?.headline || "Systemic Integrity"} <br />
                <span class="text-slate-300">{dict.about?.bio?.headlineAccent || "by Design."}</span>
              </h2>
              <div class="max-w-2xl space-y-6 text-xl leading-relaxed font-medium text-slate-600">
                <p>
                  {dict.about?.bio?.paragraph1 || "Software should be a derivation of logical truth. Founded by an engineer obsessed with performance optimization and accessibility, AppLass was born from a simple realization: the modern web is failing under the weight of its own bloat."}
                </p>
                <p>
                  {dict.about?.bio?.paragraph2 || "With 7+ years of experience building mission-critical e-commerce infrastructure and high-productivity mobile environments, I deploy tools that solve for one variable:"}
                  <strong>{dict.about?.bio?.paragraph2Highlight || "Impact."}</strong>
                </p>
              </div>
              <div class="flex gap-6">
                <a
                  href="https://www.linkedin.com/in/hasanm025/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex h-14 w-14 items-center justify-center rounded-2xl bg-slate-50 text-slate-900 shadow-sm transition-all hover:bg-blue-600 hover:text-white"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
                </a>
                <a
                  href="https://github.com/hasanm95"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex h-14 w-14 items-center justify-center rounded-2xl bg-slate-50 text-slate-900 shadow-sm transition-all hover:bg-slate-900 hover:text-white"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </Section>

      {/* Pillars Section */}
      <Section className="bg-slate-50/50 py-24" client:load>
        <div class="section-container">
          <div class="mb-24 flex flex-col items-start gap-16 md:flex-row">
            <div class="flex-1">
              <h2 class="text-5xl font-black text-slate-900">
                {dict.about?.philosophy?.headline || "Built Different by Logic."}
              </h2>
            </div>
            <div class="flex-1">
              <p class="text-xl leading-relaxed font-medium text-slate-600">
                {dict.about?.philosophy?.description || 'We avoid the "feature-first" trap and focus on systemic integrity. Every line of code is measured against Core Web Vitals and human psychological constraints.'}
              </p>
            </div>
          </div>

          <div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
            {PILLARS.map((pillar, idx) => {
              const Icon = iconMap[pillar.iconName as keyof typeof iconMap];
              const dictKey = PILLAR_KEYS[idx];
              const translation = dict.pillars?.[dictKey];
              
              return (
                <div class="group rounded-[2.5rem] border border-slate-100 bg-white p-12 transition-all hover:border-blue-500/20 hover:shadow-2xl hover:shadow-blue-500/5">
                  <div class="mb-8 flex h-16 w-16 items-center justify-center rounded-2xl bg-blue-500/10 text-blue-600 transition-colors group-hover:bg-blue-600 group-hover:text-white">
                    {Icon && <Icon size={32} />}
                  </div>
                  <span class="mb-4 block text-[10px] font-black tracking-widest text-slate-400 uppercase">
                    {translation?.label || pillar.label}
                  </span>
                  <h3 class="mb-6 text-2xl font-black text-slate-900">
                    {translation?.title || pillar.title}
                  </h3>
                  <p class="text-lg leading-relaxed font-medium text-slate-500">
                    {translation?.description || pillar.description}
                  </p>
                </div>
              );
            })}
          </div>
        </div>
      </Section>

      {/* Citing & Authority Signals */}
      <Section className="py-32" client:load>
        <div class="section-container">
          <div class="relative flex flex-col items-center gap-16 overflow-hidden rounded-[3rem] bg-blue-600 p-16 text-white lg:flex-row lg:p-24">
            <div class="z-10 flex-1">
              <h2 class="mb-8 text-5xl leading-tight font-black">
                {dict.about?.authority?.headline || "Trusted by 20,000+"} <br />
                {dict.about?.authority?.headlineAccent || "Digital Minimalists."}
              </h2>
              <div class="mb-12 grid grid-cols-2 gap-8">
                <div>
                  <span class="mb-2 block text-4xl font-black tracking-tighter">
                    {dict.about?.authority?.stats?.downloads?.value || "10K+"}
                  </span>
                  <span class="text-xs font-bold tracking-widest text-blue-200 uppercase">
                    {dict.about?.authority?.stats?.downloads?.label || "ScreenVeil Android"}
                  </span>
                </div>
                <div>
                  <span class="mb-2 block text-4xl font-black tracking-tighter">
                    {dict.about?.authority?.stats?.rating?.value || "4.4★"}
                  </span>
                  <span class="text-xs font-bold tracking-widest text-blue-200 uppercase">
                    {dict.about?.authority?.stats?.rating?.label || "Global Rating"}
                  </span>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-white/10">
                  <Shield size={18} />
                </div>
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-white/10">
                  <Zap size={18} />
                </div>
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-white/10">
                  <Search size={18} />
                </div>
              </div>
            </div>
            <div class="z-10 lg:w-1/3">
              <p class="mb-10 text-xl leading-relaxed font-medium text-blue-100">
                {dict.about?.authority?.description || "AppLass software is regularly cited in productivity guides and tech audits for its zero-bloat approach and strict privacy protocols."}
              </p>
              <a
                href={`/${lang}/docs`}
                class="inline-flex h-14 items-center rounded-full bg-white px-10 font-black text-blue-600 shadow-xl transition-all hover:bg-slate-50"
              >
                {dict.about?.authority?.cta || "Read the Docs"}
              </a>
            </div>
            {/* Abs Decorative Circle */}
            <div class="absolute top-0 right-0 -mt-48 -mr-48 h-96 w-96 rounded-full bg-white/5 blur-3xl" />
          </div>
        </div>
      </Section>
    </div>
    <Footer translations={dict.footer} />
  </div>
</Layout>
