---
import Layout from '../../../layouts/Layout.astro';
import { Navbar, Footer, FAQSchema } from "@/components/common";
import { Section } from "@/components/common/Section";
import {
  Shield,
  Clock,
  Zap,
  Brain,
  Lock,
  Smartphone,
  Eye,
  Sun,
} from "lucide-react";
import { FAQ_REGISTRY } from "@/constants/faq-registry";
import { getDictionary } from "@/i18n/get-dictionary";
import { i18nConfig } from "@/i18n/config";

export async function getStaticPaths() {
  return i18nConfig.locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const dict = await getDictionary(lang as any);

const meta = dict.metadata?.digitalWellness || {};
---

<Layout 
  title={meta.title || "Digital Wellness Guide 2026: 7 Steps to Reclaim Your Focus [Expert Guide]"}
  description={meta.description || "Master your digital life in 2026. Learn how to combat digital burnout, audit your notifications, and use privacy-first tools like Mindful Guard to boost productivity."}
  keywords={meta.keywords}
  ogTitle={meta.ogTitle}
  ogDescription={meta.ogDescription}
  ogImage={meta.ogImage}
  ogUrl={meta.ogUrl}
  lang={lang}
>
  <div class="min-h-screen bg-white font-sans selection:bg-blue-100 selection:text-blue-900">
    <Navbar client:load translations={dict.nav} />

    <main class="pt-32">
      {/* Hero Section */}
      <Section className="bg-iridescent border-b border-slate-100 py-20 lg:py-32" client:load>
        <div class="section-container">
          <span class="mb-6 block text-[10px] font-black tracking-[0.3em] text-blue-600 uppercase">
            Authority Pillar
          </span>
          <h1 class="text-display mb-8 max-w-5xl text-slate-900">
            The Ultimate Guide to Digital Wellness in 2026
            <span class="text-slate-300">
              : Master Your Focus and Privacy.
            </span>
          </h1>
          <p class="max-w-3xl text-xl leading-relaxed font-medium text-slate-600">
            In 2026, the average professional spends more than 11 hours a day
            interacting with screens. While technology has made us more
            connected than ever, it has also led to a "Great
            Decoupling" of our attention, where constant notifications
            fragment our focus and lead to digital burnout.
          </p>
          <p class="mt-8 max-w-3xl border-l-4 border-blue-500 pl-6 text-lg font-medium text-slate-500 italic">
            Digital wellness is no longer just about "using your phone
            less." It is a holistic approach to physical health,
            cognitive load management, and digital privacy.
          </p>
        </div>
      </Section>

      {/* Cognitive Load Management */}
      <Section className="py-24" client:load>
        <div class="section-container">
          <div class="flex flex-col items-start gap-20 lg:flex-row">
            <div class="sticky top-40 lg:w-1/3">
              <div class="mb-8 flex h-14 w-14 items-center justify-center rounded-2xl bg-blue-600 text-white">
                <Brain className="h-8 w-8" />
              </div>
              <h2 class="mb-6 text-4xl font-black text-slate-900">
                1. Cognitive Load Management
              </h2>
              <p class="text-lg leading-relaxed font-medium text-slate-500">
                Finding the Signal in the Noise. Our brains were not built to
                process 100+ notifications per hour. To maintain peak
                performance, you must treat your attention as a finite
                resource.
              </p>
            </div>
            <div class="flex-1 space-y-12">
              <div class="rounded-[2.5rem] border border-slate-100 bg-slate-50 p-12 transition-all hover:shadow-xl">
                <h3 class="mb-6 text-2xl font-black text-slate-900">
                  Notification Auditing
                </h3>
                <p class="mb-8 font-medium text-slate-600">
                  Categorize your alerts into three levels to protect your
                  neural bandwidth:
                </p>
                <ul class="space-y-6">
                  <li class="flex gap-4">
                    <div class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-rose-100 text-xs font-black text-rose-600">
                      1
                    </div>
                    <p class="font-bold text-slate-700">
                      <span class="text-rose-600">
                        Level 1 (Critical):
                      </span>{" "}
                      Includes family and server alerts for immediate
                      response.
                    </p>
                  </li>
                  <li class="flex gap-4">
                    <div class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-amber-100 text-xs font-black text-amber-600">
                      2
                    </div>
                    <p class="font-bold text-slate-700">
                      <span class="text-amber-600">
                        Level 2 (Active):
                      </span>{" "}
                      Should be batched every 2 hours.
                    </p>
                  </li>
                  <li class="flex gap-4">
                    <div class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-blue-100 text-xs font-black text-blue-600">
                      3
                    </div>
                    <p class="font-bold text-slate-700">
                      <span class="text-blue-600">
                        Level 3 (Passive):
                      </span>{" "}
                      Social media and newslettersâ€”disable entirely.
                    </p>
                  </li>
                </ul>
              </div>
              <div class="rounded-[2.5rem] border border-blue-100 bg-blue-50/50 p-12">
                <h3 class="mb-6 text-2xl font-black text-slate-900">
                  Implementation of "Deep Work" Blocks
                </h3>
                <p class="leading-relaxed font-medium text-slate-600">
                  Dedicate at least two hours every morning to high-complexity
                  tasks with zero digital interruptions. This means{" "}
                  <strong class="text-slate-900">
                    no Slack, no email, and no phone.
                  </strong>
                </p>
              </div>
            </div>
          </div>
        </div>
      </Section>

      {/* Physical Setup */}
      <Section className="bg-slate-50/50 py-24" client:load>
        <div class="section-container text-center">
          <span class="mb-4 block text-[10px] font-black tracking-widest text-emerald-600 uppercase">
            Physical Health
          </span>
          <h2 class="mb-16 text-5xl font-black text-slate-900">
            2. The Physical Setup: 2026 Ergonomics
          </h2>
          <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
            <div class="rounded-[2.5rem] border border-slate-100 bg-white p-12 shadow-sm transition-transform hover:-translate-y-2">
              <div class="mb-8 flex justify-center">
                <div class="rounded-2xl bg-emerald-50 p-4 text-emerald-600">
                  <Zap size={32} />
                </div>
              </div>
              <h4 class="mb-4 text-xl font-black text-slate-900">The 90-Degree Rule</h4>
              <p class="text-base font-medium text-slate-500">Keep elbows parallel to the desk and knees at a 90-degree angle with feet flat on the floor.</p>
            </div>
            
            <div class="rounded-[2.5rem] border border-slate-100 bg-white p-12 shadow-sm transition-transform hover:-translate-y-2">
              <div class="mb-8 flex justify-center">
                <div class="rounded-2xl bg-emerald-50 p-4 text-emerald-600">
                  <Eye size={32} />
                </div>
              </div>
              <h4 class="mb-4 text-xl font-black text-slate-900">20-20-20 Eye Health</h4>
              <p class="text-base font-medium text-slate-500">Every 20 minutes, look at something 20 feet away for at least 20 seconds to prevent strain.</p>
            </div>
            
            <div class="rounded-[2.5rem] border border-slate-100 bg-white p-12 shadow-sm transition-transform hover:-translate-y-2">
              <div class="mb-8 flex justify-center">
                <div class="rounded-2xl bg-emerald-50 p-4 text-emerald-600">
                  <Sun size={32} />
                </div>
              </div>
              <h4 class="mb-4 text-xl font-black text-slate-900">Blue Light Mitigation</h4>
              <p class="text-base font-medium text-slate-500">Disable all blue-light-emitting devices 60 minutes before sleep for natural melatonin production.</p>
            </div>
          </div>
        </div>
      </Section>

      {/* Essential Tools */}
      <Section className="py-24" client:load>
        <div class="section-container">
          <div class="mx-auto mb-20 max-w-3xl text-center">
            <h2 class="mb-8 text-5xl font-black text-slate-900">
              3. Essential Tools for Focus and Privacy
            </h2>
            <p class="text-xl font-medium text-slate-500">
              To achieve digital wellness, you need tools that respect your
              data while protecting your time.
            </p>
          </div>
          <div class="space-y-8">
            <div class="group flex flex-col items-center gap-16 rounded-[3rem] border border-slate-100 bg-[#FAFBFD] p-12 transition-all hover:border-blue-500/20 lg:flex-row lg:p-20">
              <div class="flex-1">
                <div class="mb-6 flex items-center gap-3">
                  <Shield className="h-6 w-6 text-blue-600" />
                  <span class="text-xs font-black tracking-widest text-blue-600 uppercase">
                    Privacy First
                  </span>
                </div>
                <h3 class="mb-6 text-4xl font-black text-slate-900">
                  Mindful Guard
                </h3>
                <p class="mb-8 text-lg leading-relaxed font-medium text-slate-500">
                  A leading privacy-first focus app that combines a Pomodoro
                  timer with strict app blocking. Unlike many competitors, it
                  works{" "}
                  <strong class="text-slate-900">
                    100% offline with no data collection.
                  </strong>
                </p>
                <a
                  href={`/${lang}/apps/mindful-guard`}
                  class="inline-flex h-14 items-center rounded-full bg-blue-600 px-10 font-black text-white transition-all hover:bg-blue-700"
                >
                  View Mindful Guard
                </a>
              </div>
              <div class="flex aspect-square items-center justify-center rounded-[2.5rem] border border-slate-50 bg-white p-12 shadow-inner lg:w-1/3">
                <Shield className="h-32 w-32 text-blue-600" />
              </div>
            </div>

            <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
              <div class="rounded-[2.5rem] border border-slate-100 bg-white p-12">
                <h4 class="mb-6 flex items-center gap-4 text-2xl font-black text-slate-900">
                  <Smartphone className="text-blue-600" /> ScreenVeil
                </h4>
                <p class="mb-10 leading-relaxed font-medium text-slate-500">
                  A lightweight screen filter for Android designed to protect
                  your data from prying eyes in public spaces while reducing
                  eye strain through customizable overlays.
                </p>
                <a
                  href={`/${lang}/apps/screenveil`}
                  class="font-black text-blue-600 hover:underline"
                >
                  Learn about ScreenVeil &rarr;
                </a>
              </div>
              <div class="rounded-[2.5rem] border border-slate-100 bg-white p-12">
                <h4 class="mb-6 flex items-center gap-4 text-2xl font-black text-slate-900">
                  <Lock className="text-emerald-600" /> Opal Alternatives
                </h4>
                <p class="mb-10 leading-relaxed font-medium text-slate-500">
                  For Android users looking for the functionality of
                  iOS's Opal, several high-performance alternatives now
                  offer deep analytics into your triggers and patterns.
                </p>
                <a
                  href={`/${lang}/blog/opal-alternatives-android`}
                  class="font-black text-emerald-600 hover:underline"
                >
                  Read the comparison &rarr;
                </a>
              </div>
            </div>
          </div>
        </div>
      </Section>

      {/* Offline Recovery Protocol */}
      <Section className="relative mx-4 mb-24 overflow-hidden rounded-[4rem] bg-slate-900 py-24 text-white" client:load>
        <div class="section-container relative z-10">
          <div class="flex flex-col items-center gap-20 lg:flex-row">
            <div class="flex-1">
              <span class="mb-6 block text-[10px] font-black tracking-widest text-blue-400 uppercase">
                The Power of Disconnect
              </span>
              <h2 class="mb-12 text-5xl font-black">
                4. The "Offline" <br /> Recovery Protocol
              </h2>
              <div class="space-y-8">
                <div class="flex gap-6">
                  <div class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full border border-blue-400/30 bg-blue-600/20 text-xs font-black text-blue-400">
                    /
                  </div>
                  <div>
                    <h4 class="mb-2 text-xl font-black">The Weekend Air-Gap</h4>
                    <p class="leading-relaxed font-medium text-slate-400">
                      Designate at least four hours every Sunday where all devices are powered off and stored in a different room.
                    </p>
                  </div>
                </div>
                
                <div class="flex gap-6">
                  <div class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full border border-blue-400/30 bg-blue-600/20 text-xs font-black text-blue-400">
                    /
                  </div>
                  <div>
                    <h4 class="mb-2 text-xl font-black">Tactile Hobbies</h4>
                    <p class="leading-relaxed font-medium text-slate-400">
                      Engage in non-digital activities like gardening or paper-based reading to reset your dopamine receptors.
                    </p>
                  </div>
                </div>
                
                <div class="flex gap-6">
                  <div class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full border border-blue-400/30 bg-blue-600/20 text-xs font-black text-blue-400">
                    /
                  </div>
                  <div>
                    <h4 class="mb-2 text-xl font-black">The Nature Break</h4>
                    <p class="leading-relaxed font-medium text-slate-400">
                      Spend 15 minutes in direct sunlight before 10:00 AM to regulate your circadian rhythm.
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div class="lg:w-1/3">
              <div class="rounded-[3rem] bg-blue-600 p-12 text-center shadow-2xl">
                <Clock className="mx-auto mb-8 h-16 w-16 text-white" />
                <p class="mb-8 text-xl leading-relaxed font-bold text-white">
                  "Structure determines function. To maintain long-term
                  productivity, you must intentionally disconnect."
                </p>
              </div>
            </div>
          </div>
        </div>
        {/* Decorative Mesh */}
        <div
          class="pointer-events-none absolute inset-0 z-0 opacity-20"
          style="background-image: linear-gradient(to right, #1e293b 1px, transparent 1px), linear-gradient(to bottom, #1e293b 1px, transparent 1px); background-size: 6rem 6rem;"
        />
      </Section>

      {/* FAQs */}
      <Section className="py-24" client:load>
        <div class="section-container max-w-4xl">
          <h2 class="mb-16 text-center text-4xl font-black text-slate-900">
            Frequently Asked Questions
          </h2>
          <div class="space-y-8">
            {FAQ_REGISTRY.DIGITAL_WELLNESS.map((faq) => (
              <div class="rounded-3xl border border-slate-100 p-10 transition-all hover:border-blue-500/20">
                <h4 class="mb-4 text-xl font-black text-slate-900">
                  {faq.question}
                </h4>
                <p class="leading-relaxed font-medium text-slate-500">
                  {faq.answer}
                </p>
              </div>
            ))}
          </div>
        </div>
        <FAQSchema items={FAQ_REGISTRY.DIGITAL_WELLNESS} />
      </Section>

      {/* Author Bio Section */}
      <Section className="border-t border-slate-100 bg-slate-50/30 py-24" client:load>
        <div class="section-container">
          <div class="mx-auto max-w-2xl text-center">
            <div class="mb-8 flex justify-center">
              <div class="flex h-24 w-24 items-center justify-center overflow-hidden rounded-full border-4 border-white bg-slate-200 text-4xl font-black text-slate-400 italic shadow-xl">
                H
              </div>
            </div>
            <h3 class="mb-4 text-2xl font-black text-slate-900">
              Hasan M.
            </h3>
            <p class="mb-8 leading-relaxed font-medium text-slate-600">
              Founder of AppLass and Lead Engineer focused on mathematical
              optimization and digital discipline. With 7+ years of experience
              in first-principles software architecture.
            </p>
            <div class="flex justify-center gap-4">
              <a
                href={`/${lang}/about`}
                class="flex items-center gap-2 font-black text-blue-600 hover:underline"
              >
                View Full Bio &rarr;
              </a>
              <span class="text-slate-300">|</span>
              <a
                href="https://www.linkedin.com/in/hasanm025/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-400 transition-colors hover:text-blue-600"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
              </a>
              <a
                href="https://github.com/hasanm95"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-400 transition-colors hover:text-slate-900"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
              </a>
            </div>
          </div>
        </div>
      </Section>
    </main>

    <Footer translations={dict.footer} />
  </div>
</Layout>
