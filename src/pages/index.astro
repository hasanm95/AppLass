---
import Layout from '../layouts/Layout.astro';
import { Navbar, Footer } from "@/components/common";
import {
  Hero,
  SocialProof,
  ProductShowcase,
  FoundersMoat,
  SolutionsSection,
  AnswerNuggets,
} from "@/components/home";
import { getDictionary } from "@/i18n/get-dictionary";

const dict = await getDictionary("en");

const title = dict.metadata?.home?.title || "Applass: Productivity & Privacy Solutions for the 2026 Digital World";
const description = dict.metadata?.home?.description || "Home of Mindful Guard and ScreenVeil. Discover advanced Android focus tools and Shopify apps designed to protect your privacy and boost ROI.";
---

<Layout title={title} description={description} lang="en">
  <Navbar client:load translations={dict.nav} currentLang="en" />
  <Hero client:load translations={dict.home?.hero} />
  <SocialProof client:idle translations={dict.home?.socialProof} />
  <ProductShowcase client:idle translations={dict.home?.productShowcase} />
  <FoundersMoat client:idle translations={dict.home?.foundersMoat} />
  <SolutionsSection client:idle translations={dict.home?.solutions} />
  <AnswerNuggets client:idle translations={dict.home?.faq} />
  <Footer translations={dict.footer} />
</Layout>
