---
import DocsLayout from '@/layouts/DocsLayout.astro';
import Content from '../../components/docs-content/page';
import { i18nConfig } from '@/i18n/config';
import { getDictionary } from '@/i18n/get-dictionary';



const lang = "en";
const dict = await getDictionary(lang as any);
const meta = dict.metadata?.docsHome || {};
---

<DocsLayout 
  lang={lang as string} 
  app="hub"
  title={meta.title || "Documentation Hub | AppLass"}
  description={meta.description || "Comprehensive guides, technical documentation, and integration instructions for the entire AppLass app ecosystem."}
  keywords={meta.keywords}
  ogTitle={meta.ogTitle}
  ogDescription={meta.ogDescription}
  ogImage={meta.ogImage}
  ogUrl={meta.ogUrl}
>
  <Content lang={lang as string} />
</DocsLayout>
